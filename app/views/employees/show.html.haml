
.row.mt-2
    .col-12.col-md-6.col-xl-4
        %h1= @employee.name
        %table{style: {border: 'none', background: {color: 'transparent'}, align: 'left', border: '0', width: '100%'}}
            %tbody
                %tr
                    %td{style: {border: 'none', background: {color: 'transparent'}, align: 'left', valign: 'top', width: '50%'}}
                        = image_tag('HSAMT1.jpg', size: "320")
                    %td{valign:'top'}
                        %h3 Title: 
                        %p= @employee.title
                        %h3 Description: 
                        %p= @employee.description